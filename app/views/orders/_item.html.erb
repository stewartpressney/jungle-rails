<% if product = Product.find_by(id: line_item.product_id) %>
  <tr>
  <%= puts product.inspect %>
    <% if !defined?(email) %>
      <td>
        <%= image_tag product.image.tiny %>
      </td>
    <% end %>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= humanized_money_with_symbol line_item.item_price_cents %>
    </td>
    <td>
      <%= line_item.quantity %>
    </td>
    <td>
      <%= humanized_money_with_symbol line_item.total_price_cents %>
    </td>
  </tr>
<% end %>